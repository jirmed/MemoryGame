<core:FragmentDefinition xmlns:core="sap.ui.core"
  xmlns:f="sap.ui.layout.form"
  xmlns="sap.m">
  <f:SimpleForm id="statistics"
    minWidth="1024"
    maxContainerCols="3"
    editable="true"
    layout="ResponsiveGridLayout"
    title="Statistics"
    labelSpanL="4"
    labelSpanM="4"
    emptySpanL="0"
    emptySpanM="0"
    columnsL="3"
    columnsM="3"
    validateFieldGroup="onValidateFieldGroup">
    <f:content>
      <Table items="{/statistics/guesses}"
        
        alternateRowColors="true">
        <columns>
          <Column width="3em"/>
          <Column>
            <Text text="Number"/>
          </Column>
          <Column>
            <Text text="Guess"/>
          </Column>
        </columns>
        <items>
          <ColumnListItem>
            <cells>
              <ObjectStatus state="{path:'correct',formatter:'.formatter.guessCorrectState'}"
                inverted="true"
                active="false"
                icon="{path:'correct',formatter:'.formatter.guessCorrectIcon'}" />
              <ObjectNumber number="{randomNumber}" />
              <ObjectNumber number="{guessNumber}"
                state="{path:'correct',formatter:'.formatter.guessCorrectState'}" />
            </cells>
          </ColumnListItem>
        </items>
      </Table>
    </f:content>
  </f:SimpleForm>

</core:FragmentDefinition>    