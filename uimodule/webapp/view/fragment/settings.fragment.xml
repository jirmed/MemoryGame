<core:FragmentDefinition
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m">
    <f:SimpleForm id="settings"
        binding="{/settings}"
        minWidth="1024"
        maxContainerCols="3"
        editable="true"
        layout="ResponsiveGridLayout"
        title="Settings"
        labelSpanL="4"
        labelSpanM="4"
        emptySpanL="0"
        emptySpanM="0"
        columnsL="3"
        columnsM="3"
        validateFieldGroup="onValidateFieldGroup">
        <f:content>
            <Label text="Digits">
                <layoutData>
                    <l:GridData span="XL1 L1 M6 S6"/>
                </layoutData>
            </Label>
            <StepInput id="digits"
                value="{digits}"
                change="onSettingsChange"
                fieldWidth="50%"
                description=" "
                min="1"
                max="99"
                textAlign="Center"
                step="1"
                largerStep="10">
                <layoutData>
                    <l:GridData span="XL2 L2 M6 S6"/>
                </layoutData>
            </StepInput>
            <Label text="Delay">
                <layoutData>
                    <l:GridData span="XL1 L1 M6 S6"/>
                </layoutData>
            </Label>
            <StepInput description="ms"
                value="{delay}"
                change="onSettingsChange"
                fieldWidth="50%"
                min="0"
                max="2000"
                textAlign="Center"
                step="50"
                largerStep="4">
                <layoutData>
                    <l:GridData span="XL2 L2 M6 S6"/>
                </layoutData>
            </StepInput>
            <Label text="Guess reverse">
                <layoutData>
                    <l:GridData span="XL2 L2 M6 S6"/>
                </layoutData>
            </Label>
            <Switch state="{reverse}"
                change="onSettingsChange">
                <layoutData>
                    <l:GridData span="XL1 L1 M6 S6"/>
                </layoutData>
            </Switch>
            <Label text="Show number on reading">
                <layoutData>
                    <l:GridData span="XL2 L2 M6 S6"/>
                </layoutData>
            </Label>
            <Switch state="{showNumber}"
                change="onSettingsChange">
                <layoutData>
                    <l:GridData span="XL1 L1 M6 S6"/>
                </layoutData>
            </Switch>
        </f:content>
    </f:SimpleForm>
</core:FragmentDefinition>